@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-right">
        <li span style="color:whitesmoke">Welcome: @User.Identity.Name</li>
        <li>@Html.ActionLink("Logout", "Logout", "Authen")</li>
    </ul>

    if (User.IsInRole("Admin"))
    {
        @Html.Partial("_AdminMenu");
    }
    else if (User.IsInRole("Trainee"))
    {
        @Html.Partial("_TraineeMenu");
    }
    else if (User.IsInRole("TrainingStaff"))
    {
        @Html.Partial("_TrainingStaffMenu");
    }
    else if (User.IsInRole("Trainer"))
    {
        @Html.Partial("_TrainerMenu");
    }
}
else
{
    <ul class="nav navbar-right">
        <li>@Html.ActionLink("Login", "Login", "Authen")</li>
    </ul>
}
